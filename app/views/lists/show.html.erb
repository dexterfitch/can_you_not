<% content_for(:title, "Can You Not | List") %>

<h2><%= @list.name %></h2>

<h4><%= @list.description %></h4>

<% if @list.tasks.any? %>
  <h5>Tasks:</h5>

  <ul>
    <% @list.tasks.each do |task| %>
      <li>
        <%= task.description %> |
        <%= link_to "Edit", edit_list_task_path(@list, task) %> |
        <%= link_to "Delete", list_task_path(@list, task), :data => {:confirm => "Ya sure?", :method => "delete"} %>
      </li>
    <% end %>
  </ul>

<% else %>

  <p>No tasks</p>

<% end %>

<p><%= link_to "Whatever, add a dumb task, or something", new_list_task_path(@list) %></p> 

<p><%= link_to "Edit", edit_list_path(@list) %></p>
<p><%= link_to "Delete", list_path(@list), :data => {:confirm => "Ya sure?", :method => "delete"} %></p>

<p><%= link_to "Return to To-Don't Lists", lists_path %></p>
